<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_item"
    style="@style/Widget.Datto.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:theme="@style/Theme.Datto.AppWidgetContainer">

    <ImageView
        android:id="@+id/widget_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/cover" />

    <ImageView
        android:id="@+id/widget_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        android:src="@drawable/content" />

    <TextView
        android:id="@+id/widget_group_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/widget_event_name"
        android:paddingLeft="16dp"
        android:text="TextView"
        android:textColor="#FFFFFF"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/widget_event_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/widget_date"
        android:paddingLeft="16dp"
        android:text="TextView"
        android:textColor="#FFFFFF"
        android:textFontWeight="600"
        android:textSize="16sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/widget_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:paddingLeft="16dp"
        android:paddingBottom="16dp"
        android:text="TextView"
        android:textColor="#FFFFFF"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/widget_warning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="No upcoming event available"
        android:textColor="#FFFFFF"
        android:textFontWeight="600"
        android:visibility="visible" />

</RelativeLayout>